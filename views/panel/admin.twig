{% extends 'layoutPanel.twig' %}
{% block section1 %}

<div class="divide10"></div>
<div class="section-title text-left">
    <h3 style="color: #002857">Administradores del Sistema</h3>
</div>
<a data-toggle="modal" data-target="#exampleModal" class="btn" style="background-color: #002857">Crear Nuevo Administrador</a>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      {% if errors %}
      <div class="alert alert-danger">
          {{errors}}
      </div>
      {% endif %}
      {% if result %}
        <div class="alert-success" align="center">Se generaron los provilegios para el colaborador seleccionado</div>
      {% endif %}
    </div>
  </div>
</div>
<br>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="exampleModalLabel" style="color: #002857">Nuevo Administrador</h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="post">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <strong><p align="justify">Introducir el correo UNIVA del colaborador al que deseas otorgarle permisos para administrar este sistema.</p></strong>
                <h3><label for="correo" style="color: #002857">Correo UNIVA</label></h3>
                <input type="email" name="correo" class="form-control" id="correo" required>
              </div>
            </div>
          </div>
          <input class="btn btn-primary" type="submit" value="Dar Privilegios" style="background-color: #002857">
        </form>
      </div>
    </div>
  </div>
</div>
          <div class="col-sm-12">
            <div class="about-author bordered" style="color: #000000">
                <div class="text-center">
                    <table class="table">
                        <tr>
                            <th>Nombre</th>
                            <th>NÃ³mina</th>
                            <th>Correo UNIVA</th>
                            <th>Correo Personal</th>
                            <th>Modificar</th>
                        </tr>
                        {% for u in users %}
                        <tr>
                            <td>{{u.nombre_usuario}}</td>
                            <td>{{u.noNomina_usuario}}</td>
                            <td>{{u.correoUniva_usuario}}</td>
                            <td>{{u.correoPersonal_usuario}}</td>
                            <td><a href="{{ "panel/admin/delete/" | url }}{{u.correoUniva_usuario}}">Eliminar</a></td>
                        </tr>
                        {% endfor %}
                    </table>
                    <div class="divide80"></div>
                    <div class="divide80"></div>
                    <div class="divide80"></div>
                    <div class="divide80"></div>
                    <div class="divide80"></div>
                    <div class="divide80"></div>
                </div>
            </div>
          </div>
{% endblock %}
