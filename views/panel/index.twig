{% extends 'layoutPanel.twig' %}
{% block section1 %}
    <div class="divide10"></div>
    <div class="section-title text-left">
        <h3 style="color: #002857">Panel Administrativo</h3>
    </div>

    <div class="divide60"></div>

    <div class="col-sm-2 col-sm-offset-2">
      <div class="about-author bordered">
        <div class="author-details ">
          <h4>Mujeres</h4>
          <h1>{{ladies|length}}</h1>
          <h5>Cantidad</h5>
        </div>
          <div class="clearfix "></div>
      </div>
    </div>

    <div class="col-sm-2 col-sm-offset-1">
      <div class="about-author bordered">
        <div class="author-details ">
          <h4>Comunidad</h4>
          <h1>{{users|length}}</h1>
          <h5>Registrados</h5>
        </div>
          <div class="clearfix "></div>
      </div>
    </div>

    <div class="col-sm-2 col-sm-offset-1">
      <div class="about-author bordered">
        <div class="author-details ">
          <h4>Hombres</h4>
          <h1>{{gentleman|length}}</h1>
          <h5>Cantidad</h5>
        </div>
          <div class="clearfix "></div>
      </div>
    </div>

    <div class="divide50"></div>
    <div class="divide70"></div>
    <div class="divide70"></div>


    <div class="col-sm-12">
      <div class="section-title text-center">
          <h3 style="color: #002857">Últimos 5 administrativos registrados</h3>
      </div>
      <div class="about-author bordered">
        <div>
          <table class="table">
            <tr>
              <th>Nombre</th>
              <th>No. Nómina</th>
              <th>Correo Univa</th>
              <th>Correo Personal</th>
            </tr>

            {% set a = 1 %}
            {% for u in users %}
            {% if a <= 5 %}
              <tr>
                <td>{{u.nombre_usuario}}</td>
                <td>{{u.noNomina_usuario}}</td>
                <td>{{u.correoUniva_usuario}}</td>
                <td>{{u.correoPersonal_usuario}}</td>
              </tr>
              {% endif %}
              {% set a = a + 1 %}
            {% endfor %}
          </table>
        </div>
          <div class="clearfix "></div>
      </div>
    </div>
{% endblock %}
