{% extends 'layout.twig' %}
{% block section1 %}
  <div class="light-wrapper">
      <div class="container inner">
          <div class="row">
              <!-- Form -->
              <div class="col-sm-12" align="center">
                  <div class="divide30"></div>
                  <div class="section-title text-center">
                      <h3 style="color: #005cb9">Documentos Guardados</h3>
                  </div>
                    <table class="table bordered">
                    <tr>
                      <th>Acta de Nacimiento</th>
                      <th>INE/IFE</th>
                      <th>Comprobante</th>
                      <th>RFC</th>
                      <th>IMSS</th>
                      <th>CURP</th>
                      <th>Matrimonio</th>
                      <th>Acta Hijos</th>
                      <th>Títulos</th>
                      <th>Cédulas</th>
                    </tr>
                    <tr style="text-align: center">

                      <td>
                        {% set acta = ['actaNacimiento_', user.noNomina_usuario, '.pdf'] | join('') %}
                        {% for f in up %}
                        {% if f.archivo == acta %}
                          {% set link = ['uploads', f.archivo] | join('/') %}
                          <h5><a href="{{ link | url }}" target="_blank">{{f.archivo}}</a></h5>
                        {% endif %}
                        {% endfor %}
                      </td>

                      <td>
                        {% set ine = ['ine_', user.noNomina_usuario, '.pdf'] | join('') %}
                        {% for f in up %}
                        {% if f.archivo == ine %}
                          {% set link = ['uploads', f.archivo] | join('/') %}
                          <h5><a href="{{ link | url }}" target="_blank">{{f.archivo}}</a></h5>
                        {% endif %}
                        {% endfor %}
                      </td>

                      <td>
                        {% set comprobante = ['comprobante_', user.noNomina_usuario, '.pdf'] | join('') %}
                        {% for f in up %}
                        {% if f.archivo == comprobante %}
