                                          <tr>
                                              <td> <input type="text" class="form-control" name="cargo_cu1" required></td>
                                              <td> <input type="text" class="form-control" name="departamento_cu1" required></td>
                                              <td> <input type="number" min="0" max="70" value="0" class="form-control" name="anios_cu1"></td>
                                              <td> <input type="number" min="0" max="12" value="0" class="form-control" name="meses_cu1"></td>
                                              <td> <input type="text" class="form-control" name="nombrePuestoJefe_cu1"></td>
                                              <td> <input type="text" class="form-control" name="periodo_cu1"></td>
                                          </tr>
                                            {% set c = 2 %} {% for c1 in range(c, 3) %}
                                            <tr>
                                                <td> <input type="text" class="form-control" name="cargo_cu{{c1}}"></td>
                                                <td> <input type="text" class="form-control" name="departamento_cu{{c1}}"></td>
                                                <td> <input type="number" min="0" max="70" value="0" class="form-control" name="anios_cu{{c1}}"></td>
                                                <td> <input type="number" min="0" max="12" value="0" class="form-control" name="meses_cu{{c1}}"></td>
                                                <td> <input type="text" class="form-control" name="nombrePuestoJefe_cu{{c1}}"></td>
                                                <td> <input type="text" class="form-control" name="periodo_cu{{c1}}"></td>
                                            </tr>
                                            {% set c = c + 1 %} {% endfor %}
                                        </table>

                                        <a role="button" data-toggle="collapse" style="text-decoration: none;" href="#collapse3" aria-expanded="false" aria-controls="collapse3">
                                            <h4 align="left" style="color: #f18903">+ Añadir más cargos</h4>
                                        </a>


                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="collapse" id="collapse3">
                                                    <table class="form group col-md-12">
                                                        {% for c1 in range(c, 15) %}
                                                        <tr>
                                                            <td> <input type="text" class="form-control" name="cargo_cu{{c1}}"></td>
                                                            <td> <input type="text" class="form-control" name="departamento_cu{{c1}}"></td>
                                                            <td> <input type="number" min="0" max="70" value="0" class="form-control" name="anios_cu{{c1}}"></td>
                                                            <td> <input type="number" min="0" max="12" value="0" class="form-control" name="meses_cu{{c1}}"></td>
                                                            <td> <input type="text" class="form-control" name="nombrePuestoJefe_cu{{c1}}"></td>
                                                            <td> <input type="text" class="form-control" name="periodo_cu{{c1}}"></td>
                                                        </tr>
                                                        {% set c = c + 1 %} {% endfor %}
                                                    </table>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Cargos Desempeñados en UNIVA -->

                        <div class="divide30"></div>

                        <!-- Áreas Laborales de Interés dentro de la Institución -->
                        <div class="row">
                            <div class=" col-sm-10 col-sm-offset-1" style="background-color: #F5F5F5">
                                <div class="divide30"></div>
                                <div class="section-title text-center">
                                    <h3 style="color: #005cb9">Áreas Laborales de Interés dentro de la Institución</h3>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <table class="form group col-md-12">
                                          <tr>
